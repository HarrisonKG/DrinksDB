<!-- submit as post form -->
<form action="/countries" method="post" id="filterCountry">
	<h2>Browse drinks by country:</h2>

<!-- drop down menu of flavors -->
	<select name="country_list">
		<option>{{reqCountry}}</option>
		{{#each countries}}
			<option>{{this.country_name}}</option>
		{{/each}}
	</select>
	<input type="submit" value="Look up drinks">
</form>
