<!-- display drink results -->
{{#if reqCountry}}
<h3>Mixed drinks from {{reqCountry}}:</h3>
{{/if}}

{{#if country_drinks}}
{{/if}}
{{#each country_drinks}}
	<option><a href="/drink/{{this.drink_id}}">{{this.drink_name}}</a></option>
{{/each}}
</br></br></br>


{{#if country_spirits}}
	<h5>Or check out these spirits:</h5>
{{/if}}
{{#each country_spirits}}
	<option><a href="/spirit/{{this.spirit_id}}">{{this.spirit_name}}</a></option>
{{/each}}

